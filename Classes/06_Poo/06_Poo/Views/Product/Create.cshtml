@model PooModel.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="text-center">
    <h1>Product Register</h1>

    <div class="container">
        <form asp-action="Create" asp-controller="Product" id="formProduct" method="post">
            <div class="row">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label">Name:</label>
                    <input type="text" asp-for="@Model.Name" class="form-control" required />

                    <label asp-for="@Model.Description" class="control-label">Description:</label>
                    <input type="text" asp-for="@Model.Description" class="form-control" required />

                    <label asp-for="@Model.CurrentPrice" class="control-label">Price:</label>
                    <input type="number" step="0.01" asp-for="@Model.CurrentPrice" class="form-control" required />
                </div>
            </div>

            <button id="btnCostumer" type="submit" class="btn btn-primary">
                Register
            </button>
        </form>
    </div>
</div>
