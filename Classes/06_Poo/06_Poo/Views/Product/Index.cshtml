@model List<PooModel.Product>

<a asp-action="Create" asp-controller="Product" class="btn btn-light">
    New Product
</a>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Current Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PooModel.Product product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.CurrentPrice</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        There's no Product registers
    </div>
}