@model List<PooModel.Costumer>

<a asp-action="Create" asp-controller="Costumer" class="btn btn-light">
    New Costumer
</a>

@if(Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(PooModel.Costumer costumer in Model)
            {
                <tr>
                    <td>@costumer.Id</td>
                    <td>@costumer.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        There's no Costumer registers
    </div>
}