@model PooModel.Costumer

@{
    ViewData["Title"] = "Create Costumer";
}

<div class="text-center">
    <h1>Costumer Register</h1>

    <div class="container">
        <form asp-action="Create" asp-controller="Costumer" id="formCostumer" method="post">
            <div class="row">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label">Name:</label>
                    <input type="text" asp-for="@Model.Name" class="form-control" required />
                </div>
            </div>

            <button id="btnCostumer" type="submit" class="btn btn-primary">
                Register
            </button>
        </form>
    </div>
</div>
